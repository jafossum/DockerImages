[Unit]
Description=Cron Runner Server
Requires=docker.service
After=docker.service

[Service]
Restart=always
RestartSec=3
ExecStart=/usr/bin/docker run \
 --name="cron-server" \
 --network rpi-net \
 --env-file /home/pi/DockerImages/cron_rpi/env.list \
 --rm \
 cron-server-rpi:latest
ExecStop=/usr/bin/docker stop -t 10 cron-server

[Install]
WantedBy=multi-user.target
